<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#fcfcfc"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="330dp"
        android:layout_height="290dp"
        android:layout_above="@id/frame_layout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chat1" />

    <RelativeLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/btn_email">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bienvenido"
            android:text="@string/bienvenido"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:textColor="@color/cardview_dark_background"


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:paddingBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iniciar_email"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#949cdf"
            android:text="@string/iniciar_email"
            android:textSize="15sp"
            app:icon="@drawable/email" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="40dp"
        android:paddingBottom="40dp">

        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/google_logo" />

        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/facebook" />

    </RelativeLayout>
</RelativeLayout>